{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts",
    "node_modules/otplib"
  ],
  "exclude": [
    "node_modules",
    "migration.ts",
    "src/plugins/**/ui/*",
    "admin-ui"
  ],
  "ts-node": {
    "files": true
  }
}